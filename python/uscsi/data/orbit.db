record(waveform, "$(P)IDX-I") {
    field(DTYP, "FLAME Index Orbit")
    field(INP , "@$(SIM) $(ENAME=marker) $(VECTOR=moment0)") # "$(VECTOR=moment0)" is required, but ignored
    field(FTVL, "DOUBLE")
    field(NELM, "$(NELM=10)")
    field(PINI, "YES")
}

record(waveform, "$(P)S-I") {
    field(DTYP, "FLAME State Orbit")
    field(INP , "@$(SIM) $(ENAME=marker) pos")
    field(FTVL, "DOUBLE")
    field(NELM, "$(NELM=10)")
    field(SCAN, "I/O Intr")
}

