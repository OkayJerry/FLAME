record(waveform, "$(P)IDX-I") {
    field(DTYP, "FLAME Index Orbit")
    field(INP , "@$(SIM) marker $(VECTOR=state)") # "$(VECTOR=state)" is required, but ignored
    field(FTVL, "DOUBLE")
    field(NELM, "$(NELM=10)")
    field(PINI, "YES")
}

record(waveform, "$(P)S-I") {
    field(DTYP, "FLAME State Orbit")
    field(INP , "@$(SIM) marker pos")
    field(FTVL, "DOUBLE")
    field(NELM, "$(NELM=10)")
    field(SCAN, "I/O Intr")
}

